<div class="col">
  <div class="card h-100 hoverable">
    
    {% if course.redirect %}
      {% assign course_url = course.redirect %}
    {% else %}
      {% assign course_url = course.url | relative_url %}
    {% endif %}

    {% if course.img %}
      {%
        include figure.liquid
        loading="eager"
        path=course.img
        sizes = "250px"
        alt="course thumbnail"
        class="card-img-top"
      %}
    {% endif %}

    <div class="card-body d-flex flex-column" style="padding-bottom: 0 !important;">
      
      <h2 class="card-title">
        <a href="{{ course_url }}" class="stretched-link text-decoration-none" style="color: inherit;">
          {{ course.title }}
        </a>
      </h2>
      
      <p class="card-text mb-3">{{ course.description }}</p>

      <div class="d-flex justify-content-between align-items-end mt-auto pb-1" style="position: relative; z-index: 2; min-height: 24px;">
        
        <div class="github-icon" style="line-height: 1;">
          {% if course.github %}
            <div class="icon" data-toggle="tooltip" title="Code Repository" style="display: inline-block;">
              <a href="{{ course.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
            </div>
            {% if course.github_stars %}
              <span class="stars" data-toggle="tooltip" title="GitHub Stars" style="display: inline-block;">
                <i class="fa-solid fa-star"></i>
                <span id="{{ course.github_stars }}-stars"></span>
              </span>
            {% endif %}
          {% else %}
            &nbsp;
          {% endif %}
        </div>

        {% assign safe_id = course.url | relative_url | replace: '/', '-' | remove_first: '-' | remove_last: '-' %}
        
        <div class="lyket-wrapper" style="transform: scale(0.85); transform-origin: right bottom; margin-bottom: -2px;">
          <div 
            data-lyket-type="updown" 
            data-lyket-id="course-{{ safe_id }}" 
            data-lyket-namespace="courses"
            data-lyket-template="simple"
          >
          </div>
        </div>

      </div> 
      
    </div>
  </div>
</div>